<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/GuptaName"
            android:layout_width="134dp"
            android:layout_height="71dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="  Table Booking"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/amazonImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resturantDesc"
            android:layout_width="166dp"
            android:layout_height="31dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:text="  Restaurant"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/amazonImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/GuptaName" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:id="@+id/amazonImage"
            android:src="@drawable/images"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/GuptaName"/>

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amazonImage">

            <androidx.cardview.widget.CardView
                android:id="@+id/burgerCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_below="@+id/item1">

                    <TextView
                        android:id="@+id/item1"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/food1"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="7dp"
                        android:text="Burger- Rs95"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <Button
                        android:layout_width="74dp"
                        android:layout_height="46dp"
                        android:id="@+id/btn"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="17dp"
                        android:layout_marginBottom="3dp"
                        android:text="Pre Book"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/food1"
                        android:layout_width="119dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/bg" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <TextView
                        android:id="@+id/food2"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item2"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="7dp"
                        android:text="Bhature- Rs155"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <Button
                        android:layout_width="74dp"
                        android:layout_height="46dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="17dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/btn2"
                        android:text="Pre Book"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/item2"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ch" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:id="@+id/row2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <TextView
                        android:id="@+id/food3"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item3"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="7dp"
                        android:text="MisalPav-Rs120"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="74dp"
                        android:layout_height="46dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="17dp"
                        android:layout_marginBottom="3dp"
                        android:text="Pre Book"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:id="@+id/item3"
                        android:src="@drawable/ml"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <TextView
                        android:id="@+id/food4"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item4"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="7dp"
                        android:text="Samosa- Rs70"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="74dp"
                        android:layout_height="46dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="17dp"
                        android:layout_marginBottom="3dp"
                        android:text="Pre Book"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:id="@+id/item4"
                        android:src="@drawable/sm"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:id="@+id/row3"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <TextView
                        android:id="@+id/food5"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item5"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="7dp"
                        android:text="Kulche- Rs155"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="74dp"
                        android:layout_height="46dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="17dp"
                        android:layout_marginBottom="3dp"
                        android:text="Pre Book"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:id="@+id/item5"
                        android:src="@drawable/chh"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <TextView
                        android:id="@+id/food6"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item6"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="7dp"
                        android:text="Dosa- Rs165"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="74dp"
                        android:layout_height="46dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="17dp"
                        android:layout_marginBottom="3dp"
                        android:text="Pre Book"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:id="@+id/item6"
                        android:src="@drawable/ds"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>